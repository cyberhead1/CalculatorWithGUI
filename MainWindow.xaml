        private void btnEquals_Click(object sender, RoutedEventArgs e)
        {
            long result = 0;
            resultNum++;
            switch (mathOperator)
            {
                case 'A':
                    result = (firstOperand + secondOperand);
                    break;
                case 'M':
                    result = (firstOperand * secondOperand);
                    break;
                case 'S':
                    result = (firstOperand - secondOperand);
                    break;
                case 'D':
                    result = (firstOperand / secondOperand);
                    break;
                case 'E':
                    result = (firstOperand % secondOperand);
                    break;
                default:
                    result = firstOperand;
                    break;
            }

            if (resultNum > 1)
                previousOperationDisplay.Text = resultDisplay.Text;

            resultDisplay.Text = result.ToString();
            firstOperand = 0;
            secondOperand = 0;
            mathOperator = ' ';
            operationDisplay.Text = "0";

        }

